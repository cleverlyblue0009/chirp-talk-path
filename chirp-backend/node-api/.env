# Database (SQLite for development - no PostgreSQL needed)
DATABASE_URL="file:./dev.db"

# Skip Redis for development
SKIP_REDIS=true

# Skip S3 for development  
SKIP_S3=true

# Python AI Service (skip for now)
PY_API_URL=http://localhost:8000

# Firebase (placeholder - app will work without auth for development)
FIREBASE_PROJECT_ID=placeholder
FIREBASE_CLIENT_EMAIL=placeholder
FIREBASE_PRIVATE_KEY=placeholder

# JWT
JWT_SECRET=development_secret_key

# Server
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# TTS Provider (mock for development)
TTS_PROVIDER=mock

# Data retention
ANALYSIS_CONSENT_RETENTION_DAYS=365