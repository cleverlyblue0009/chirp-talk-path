# Database (update with your PostgreSQL credentials)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/chirp_db?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# S3 Storage (MinIO for local development)
S3_BUCKET=chirp-media
S3_REGION=us-east-1
S3_ACCESS_KEY=chirp_access
S3_SECRET_KEY=chirp_secret_key
S3_ENDPOINT=http://localhost:9000

# Python AI Service
PY_API_URL=http://localhost:8000

# Firebase (replace with your actual credentials)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# JWT
JWT_SECRET=your_super_secret_jwt_key_here

# Server
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# TTS Provider (mock for development)
TTS_PROVIDER=mock

# Development mode - skip Redis and S3 for basic functionality
SKIP_REDIS=true
SKIP_S3=true

# Data retention
ANALYSIS_CONSENT_RETENTION_DAYS=365